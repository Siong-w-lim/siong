# no startup message
startup_message off

# scrollback buffer
defscrollback 5000

# auto detach when hangup
autodetach on

# visual bell
vbell off

# System status
backtick 1 5 5 /bin/bash -c "free -h | awk 'NR==2{print \$4}'"
backtick 2 5 5 /bin/bash -c "df -h | awk '/dev\/mapper/{print \$4}'"
backtick 3 5 5 /bin/bash -c "df -h | awk '/dev\/sdb/{print \$4}'"
hardstatus alwayslastline
hardstatus string " %-Lw%{.cw}%n %t%{-}%+Lw %=%{.rw} %l %{.yw} %1` %{.gw} %2`;%3` "
