# no startup message
startup_message off

# scrollback buffer
defscrollback 5000

# auto detach when hangup
autodetach on

# visual bell
vbell off

# RAM free
backtick 1 5 5 /bin/bash -c "free -h | awk 'NR==2{print \$4}'"

hardstatus alwayslastline
hardstatus string " %-w%{.bw}%n %t%{-}%+w %=%{.gw} %l %{.rw} %1` "
